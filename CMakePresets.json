{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Ninja_build",
      "displayName": "Ninja build",
      "description": "Ninja build using vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/build/install",
      "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "v142,host=x64,version=14",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_SYSTEM_VERSION": "10.0.22000.0",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ],
          "disableExternalAnalysis": true
        }
      },
      "cmakeExecutable": "C:/Program Files/CMake/bin/cmake.exe",
      "hidden": true
    },
    {
      "name": "Ninja_RelWithDebInfo",
      "inherits": "Ninja_build",
      "displayName": "config maya plug",
      "description": "构建maya插件 默认版本是2020",
      "cacheVariables": {
        "Maya_Version": "2020",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "Ninja_release",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "Photoshop_Version": "120.0",
        "ADD_VERSION_LABEL": true,
        "Maya_Version": "2020"
      }
    },
    {
      "name": "Ninja_debug",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "Photoshop_Version": "120.0",
        "BUILD_USD": "ON",
        "PXR_USD_ROOT": "E:/Doodle/external/USD/debug"
      }
    },
    {
      "name": "vs2022",
      "inherits": "Ninja_debug",
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "CMAKE_SUPPRESS_REGENERATION": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "Ninja_debug",
      "jobs": 10,
      "hidden": true
    },
    {
      "name": "debug_doodle",
      "description": "调试 exe",
      "displayName": "调试 doodle exe",
      "inherits": "debug",
      "targets": [
        "DoodleExe",
        "generate_token",
        "test_main",
        "file_association_http",
        "doodle_auto_light_process",
        "doodle_file_exists",
        "doodle_kitsu_supplement",
        "Doxygen"
      ]
    },
    {
      "name": "debug_maya_plug",
      "description": "调试 maya 插件(maya插件只能使用release调试)",
      "displayName": "调试 doodle maya",
      "configurePreset": "Ninja_RelWithDebInfo",
      "inherits": "debug",
      "targets": [
        "doodle_maya"
      ]
    },
    {
      "name": "debug_maya_exe",
      "description": "调试 maya 库连接的exe(maya只能使用release调试)",
      "displayName": "调试 doodle maya exe",
      "configurePreset": "Ninja_RelWithDebInfo",
      "inherits": "debug",
      "targets": [
        "DoodleExe",
        "doodle_maya_exe",
        "doodle_maya",
        "test_main"
      ]
    },
    {
      "name": "Release_Exe",
      "configurePreset": "Ninja_release",
      "jobs": 10,
      "targets": [
        "DoodleExe",
        "generate_token",
        "doodle_auto_light_server",
        "doodle_auto_light_client",
        "file_association_http",
        "doodle_auto_light_process",
        "doodle_file_exists",
        "doodle_kitsu_supplement",
        "Doxygen"
      ]
    },
    {
      "name": "Release_Maya",
      "configurePreset": "Ninja_release",
      "jobs": 10,
      "targets": [
        "doodle_maya",
        "doodle_maya_exe"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "develop",
      "configurePreset": "Ninja_debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "test_bvh",
      "description": "测试bvh",
      "displayName": "bvh",
      "configurePreset": "Ninja_debug",
      "output": {
        "outputOnFailure": true
      },
      "filter": {
        "include": {
          "name": "bvh"
        }
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ],
  "packagePresets": [
    {
      "name": "package_7z_debug",
      "displayName": "package_7z_debug",
      "description": "package_7z_debug",
      "configurePreset": "Ninja_debug",
      "generators": [
        "7Z",
        "NSIS"
      ]
    },
    {
      "name": "package_release",
      "displayName": "package_release",
      "description": "package_release",
      "configurePreset": "Ninja_release",
      "generators": [
        "7Z",
        "NSIS"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "build_release",
      "displayName": "build_release",
      "description": "构建优化版",
      "steps": [
        {
          "type": "configure",
          "name": "Ninja_release"
        },
        {
          "type": "build",
          "name": "Release_Exe"
        },
        {
          "type": "build",
          "name": "Release_Maya"
        },
        {
          "type": "package",
          "name": "package_release"
        }
      ]
    },
    {
      "name": "build_debug",
      "displayName": "build_debug",
      "description": "构建debug工作流",
      "steps": [
        {
          "type": "configure",
          "name": "Ninja_debug"
        },
        {
          "type": "build",
          "name": "debug_doodle"
        },
        {
          "type": "package",
          "name": "package_7z_debug"
        }
      ]
    }
  ],
  "vendor": {}
}