{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake config",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/build/set_venv.cmd",
      "args": [
        "C:/PROGRA~1/CMake/bin/cmake.exe",
        "--preset",
        "Ninja_debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "cmake config maya",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/build/set_venv.cmd",
      "args": [
        "C:/PROGRA~1/CMake/bin/cmake.exe",
        "--preset",
        "Ninja_RelWithDebInfo"
      ],
      "problemMatcher": []
    },
    {
      "label": "cmake config vs",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/build/set_venv.cmd",
      "args": [
        "C:/PROGRA~1/CMake/bin/cmake.exe",
        "--preset",
        "vs2022"
      ],
      "problemMatcher": []
    },
    {
      "label": "cmake build",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/build/set_venv.cmd",
      "args": [
        "C:/PROGRA~1/CMake/bin/cmake.exe",
        "--build",
        "--preset",
        "debug_doodle"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "cmake build maya",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/build/set_venv.cmd",
      "args": [
        "C:/PROGRA~1/CMake/bin/cmake.exe",
        "--build",
        "--preset",
        "debug_maya_plug"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "cmake clean",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/build/set_venv.cmd",
      "args": [
        "C:/PROGRA~1/CMake/bin/cmake.exe",
        "--build",
        "${workspaceFolder}/build/${input:build_dir}",
        "--target",
        "clean"
      ],
      "problemMatcher": []
    },
    {
      "label": "build UE plug",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/build/Build_UE.cmd",
      "problemMatcher": []
    },
    {
      "label": "build_all",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/build/build_all.cmd",
      "problemMatcher": []
    },
    {
      "label": "运行boost测试",
      "type": "shell",
      "command": "${workspaceFolder}/build/Ninja_debug/bin/test_main.exe",
      "args": [
        "--color_output=true",
        "--detect_memory_leaks=0",
        "--log_level=message",
        "--run_test=${input:test_}"
      ],
      "problemMatcher": []
    },
    {
      "label": "运行boost测试自定义输入",
      "type": "shell",
      "command": "${workspaceFolder}/build/Ninja_debug/bin/test_main.exe --color_output=true --detect_memory_leaks=0 --log_level=message --run_test=${input:arg_input}",
      "problemMatcher": []
    },
    {
      "label": "部署",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/deployment_server.ps1",
      "args": [
        "${input:dep_opt}",
        "${input:dep_opt2}"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "arg_input",
      "type": "promptString",
      "description": "input arg",
      "default": "dingding_base/client_get_user_attendance"
    },
    {
      "id": "build_dir",
      "type": "pickString",
      "description": "构建目录",
      "options": [
        "Ninja_debug",
        "Ninja_RelWithDebInfo",
        "Ninja_release",
        "vs2022"
      ]
    },
    {
      "id": "dep_opt",
      "type": "pickString",
      "description": "部署选项",
      "options": [
        "-CopyServer",
        "-BuildKitsu",
        ""
      ]
    },
    {
      "id": "dep_opt2",
      "type": "pickString",
      "description": "部署选项2",
      "options": [
        "-CopyServer",
        "-BuildKitsu",
        ""
      ]
    },
    {
      "id": "build_target",
      "type": "pickString",
      "description": "要构建的目标",
      "options": [
        "DoodleExe",
        "doodle_core",
        "bvh_test",
        "dingding_base",
        "test_time"
      ]
    },
    {
      "id": "test_",
      "type": "pickString",
      "description": "test分类",
      "options": [
        "xlsx_table/computing_time",
        "dingding/access_token",
        "dingding/get_user_by_mobile",
        "dingding/get_attendance_updatedata",
        "auto_light/only_server",
        "auto_light/only_works",
        "auto_light/server_and_works",
        "rpc_server/base",
        "rpc_server/list_users",
        "kitsu/authenticated",
        "kitsu/get_task_directly",
        "kitsu/get_user",
        "kitsu/get_task",
        "auto_light_test/utf16_test"
      ]
    }
  ]
}