{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake config",
      "type": "shell",
      "command": "${workspaceFolder}/src/cmd_debug/config_cmake.cmd",
      "args": [],
      "problemMatcher": []
    },
    {
      "label": "cmake build",
      "type": "shell",
      "command": "${workspaceFolder}/src/cmd_debug/build_debug_venv.cmd",
      "args": [
        "${input:build_target}"
      ],
      "problemMatcher": []
    },
    {
      "label": "run_work_computer",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/deploy/run_work_computer.cmd",
      "problemMatcher": []
    },
    {
      "label": "build 5.2 plug",
      "type": "shell",
      "command": "${workspaceFolder}/script/uePlug/build_5.cmd",
      "problemMatcher": []
    },
    {
      "label": "build_all",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/build/build_all.cmd",
      "problemMatcher": []
    },
    {
      "label": "install",
      "type": "shell",
      "command": "${workspaceFolder}/build_script/build/install.cmd",
      "problemMatcher": []
    },
    {
      "label": "build 5.2 plug and install",
      "type": "shell",
      "command": "${workspaceFolder}/script/uePlug/build_5.cmd;${workspaceFolder}/build_script/build/install.cmd",
      "problemMatcher": []
    },
    {
      "label": "运行boost测试",
      "type": "shell",
      "command": "${command:cmake.getLaunchTargetPath}",
      "args": [
        "--run_test=${input:test_}",
        "--color_output=true",
        "--detect_memory_leaks=0",
        "--log_level=message"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "arg_input",
      "type": "promptString",
      "description": "input arg",
      "default": "dingding_base/client_get_user_attendance"
    },
    {
      "id": "build_target",
      "type": "pickString",
      "description": "要构建的目标",
      "options": [
        "DoodleExe",
        "doodle_core",
        "bvh_test",
        "dingding_base",
        "test_time"
      ]
    },
    {
      "id": "test_",
      "type": "pickString",
      "description": "test分类",
      "options": [
        "tset_time/time_warp_fmt_test",
        "rpc_server/base",
        "rpc_server/list_users",
        "kitsu_login",
        "kitsu_get_task"
      ]
    }
  ]
}