{
    "version": "0.2.0",
    "setupCommands": [
        {
            "description": "Enable utf-8",
            "text": "set charset UTF-8"
        }
    ],
    "configurations": [
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [
                "E:/cache/Kitchen_set/Kitchen_set.usd"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/external/USD/debug/lib/python",
                "PATH": "${workspaceFolder}/external/USD/debug/bin;${workspaceFolder}/external/USD/debug/lib;${env:PATH}"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Doodle_debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.getLaunchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.launchTargetDirectory}",
            "environment": [
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/doodle_maya/plug/maya"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "Doodle_maya_debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.getLaunchTargetPath}",
            "args": [
                "--replace_file_config=${workspaceFolder}/build/test_4.json"
            ],
            "stopAtEntry": false,
            "cwd": "${command:cmake.launchTargetDirectory}",
            "environment": [
                {
                    "name": "MAYA_LOCATION",
                    "value": "C:/Program Files/Autodesk/Maya2020"
                },
                {
                    "name": "PATH",
                    "value": "%PATH%;C:/Program Files/Autodesk/Maya2020/bin"
                },
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/Ninja_RelWithDebInfo/plug/maya"
                }
            ],
            "console": "externalTerminal",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "maya",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/Autodesk/Maya2018/bin/maya.exe",
            "args": [
                "-noAutoloadPlugins"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/doodle_maya/plug/maya"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "maya (Windows) 附加",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "debug_test",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.getLaunchTargetPath}",
            "args": [
                "--log_level=message",
                "--color_output=true",
                "--detect_memory_leaks=0",
                "--run_test=${input:test_}"
            ],
            "stopAtEntry": false,
            "cwd": "${command:cmake.launchTargetDirectory}",
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        }
    ],
    "inputs": [
        {
            "id": "arg_input",
            "type": "promptString",
            "description": "input arg",
            "default": ""
        },
        {
            "id": "debug_target",
            "type": "pickString",
            "description": "要调试的目标",
            "options": [
                "DoodleExe",
                "doodle_core",
                "bvh_test",
                "dingding_base"
            ],
            "default": "DoodleExe"
        },
        {
            "id": "test_",
            "type": "pickString",
            "description": "test分类",
            "options": [
                "xlsx_table/computing_time",
                "dingding/access_token",
                "dingding/get_user_by_mobile",
                "dingding/get_attendance_updatedata",
                "auto_light/only_server",
                "auto_light/only_works",
                "auto_light/server_and_works",
                "rpc_server/base",
                "rpc_server/list_users",
                "kitsu/login",
                "kitsu/authenticated",
                "kitsu/get_task"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Doodle_sercer/client",
            "configurations": [
                "Doodle_debug"
            ]
        }
    ]
}