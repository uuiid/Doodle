{
    "version": "0.2.0",
    "setupCommands": [
        {
            "description": "Enable utf-8",
            "text": "set charset UTF-8"
        }
    ],
    "configurations": [
        {
            "name": "Doodle_debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Ninja_debug/bin/doodle_kitsu_supplement.exe",
            "args": [
                "--config=${workspaceFolder}/build/my_debug_server.json"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Ninja_debug/bin",
            "visualizerFile": "${workspaceFolder}/stl.natvis",
            "preLaunchTask": "cmake build"
        },
        {
            "name": "Doodle_debug_local",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Ninja_debug/bin/doodle_kitsu_supplement.exe",
            "args": [
                "--config=${workspaceFolder}/build/debug_server.json",
                "--local",
                "--port=50026"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Ninja_debug/bin",
            "visualizerFile": "${workspaceFolder}/stl.natvis",
            "preLaunchTask": "cmake build"
        },
        {
            "name": "Doodle_maya_debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Ninja_RelWithDebInfo/bin/doodle_maya_exe_2020.exe",
            "args": [
                "--config=${workspaceFolder}/build/test_4.json",
                "--inspect_file"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Ninja_RelWithDebInfo/bin",
            "environment": [
                {
                    "name": "MAYA_LOCATION",
                    "value": "C:/Program Files/Autodesk/Maya2020"
                },
                {
                    "name": "PATH",
                    "value": "%PATH%;C:/Program Files/Autodesk/Maya2020/bin"
                },
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/Ninja_RelWithDebInfo/plug/maya"
                }
            ],
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "maya",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/Autodesk/Maya2020/bin/maya.exe",
            "args": [
                "-script",
                "${workspaceFolder}/build/test_sim_fbx.mel"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Ninja_RelWithDebInfo/bin",
            "environment": [
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/Ninja_RelWithDebInfo/plug/maya"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis",
            "preLaunchTask": "cmake build maya"
        },
        {
            "name": "maya (Windows) 附加",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "debug_test",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Ninja_debug/bin/test_main.exe",
            "args": [
                "--log_level=message",
                "--color_output=true",
                "--detect_memory_leaks=0",
                "--run_test=${input:test_list}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Ninja_debug/bin",
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${cwd}"
        }
    ],
    "inputs": [
        {
            "id": "test_list",
            "type": "command",
            "command": "extension.commandvariable.pickStringRemember",
            "args": {
                "fileName": "${workspaceFolder}/.vscode/test_list.json",
                "fileFormat": "json",
                "description": "选择测试",
                "jsonOption": {
                    "label": "content.options[__itemIdx__]",
                    "value": "content.options[__itemIdx__]"
                },
                "debug": true
            }
        }
    ],
    "compounds": [
        {
            "name": "Doodle_sercer/test",
            "configurations": [
                "Doodle_debug",
                "debug_test"
            ]
        },
        {
            "name": "Doodle_sercer/local",
            "configurations": [
                "Doodle_debug",
                "Doodle_debug_local"
            ]
        }
    ]
}