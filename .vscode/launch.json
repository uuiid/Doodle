{
    "version": "0.2.0",
    "setupCommands": [
        {
            "description": "Enable utf-8",
            "text": "set charset UTF-8"
        }
    ],
    "configurations": [
        {
            "name": "Doodle_debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.getLaunchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.launchTargetDirectory}",
            "environment": [
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/doodle_maya/plug/maya"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "maya",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/Autodesk/Maya2018/bin/maya.exe",
            "args": [
                "-noAutoloadPlugins"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/doodle_maya/plug/maya"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "maya (Windows) 附加",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "debug_test",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.getLaunchTargetPath}",
            "args": [
                "--log_level=message",
                "--color_output=true",
                "--run_test=${input:test_}"
            ],
            "stopAtEntry": false,
            "cwd": "${command:cmake.launchTargetDirectory}",
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "Doodle_debug_command",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "${input:arg_input}"
            ],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        }
    ],
    "inputs": [
        {
            "id": "arg_input",
            "type": "promptString",
            "description": "input arg",
            "default": ""
        },
        {
            "id": "debug_target",
            "type": "pickString",
            "description": "要调试的目标",
            "options": [
                "DoodleExe",
                "doodle_core",
                "bvh_test",
                "dingding_base"
            ],
            "default": "DoodleExe"
        },
        {
            "id": "test_",
            "type": "pickString",
            "description": "test分类",
            "options": [
                "rpc_server/base",
                "rpc_server/list_fun1"
            ],
            "default": "rpc_server/base"
        }
    ],
    "compounds": [
        {
            "name": "Doodle_sercer/client",
            "configurations": [
                "Doodle_debug"
            ]
        }
    ]
}